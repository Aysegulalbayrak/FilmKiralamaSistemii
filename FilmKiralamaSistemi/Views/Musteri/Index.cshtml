@using FilmKiralama.Entities.Model
@model List<Musteri>
@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<div style="font-family: 'Helvetica'">

    <div style="text-align: center; color: white; background-color: #1C2E3E;margin-bottom:5px">
        <h2><b> Müsteriler </b></h2>
    </div>
    <div class="form-group" style="text-align:right;margin:5px">
        @using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
        {
            <div><b> Musteri : </b> @Html.TextBox("aranacakKelime")&nbsp;<button style="color: white; background-color: #1C2E3E"> Arama yap</button> </div>}
    </div>

    <table class="table table-bordered" style=" text-align: center;">
        <thead style=" color: white; background-color: #1C2E3E">
            <tr>
                <th>Müşteri Id</th>
                <th>Müşteri</th>
                <th>Email</th>
                <th>Doğum Tarihi</th>
                <th>Cinsiyet</th>
                <th>Durumu</th>
                
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Musteri mstr in Model)
            {
                string renk = "#1C2E3E";
                string durum = "Aktif";
                if (!mstr.MusteriDurumu)
                {
                    renk = "red";
                    durum = "Pasif";
                }
            <tr style="color:@renk">

                <th>@mstr.MusteriId</th>
                <th>@mstr.MusteriAdi&nbsp;@mstr.MusteriSoyadi</th>
                <th>@mstr.MusteriEmail</th>
                <th>@mstr.DogumTarihi.ToLongDateString()</th>
                <th>@mstr.Cinsiyet</th>
                <td>@mstr.MusteriDurumu</td>


                <th>
                    <a class="btn btn-danger" href="/Musteri/Sil/@mstr.MusteriId">Sil</a>&nbsp;
                    <a class="btn btn-success" href="/Musteri/Guncelle/@mstr.MusteriId">Güncelle</a>
                </th>
            </tr>
       }
        </tbody>
    </table>
    <a href="/Musteri/Ekle/" class="btn btn-primary" style="margin: 5px; background-color: #1C2E3E;color:white"> Yeni Musteri Ekle </a>
</div>


